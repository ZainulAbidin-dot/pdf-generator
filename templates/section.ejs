<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<h2>Example Depreciation Breakdown</h2>

<canvas id="pie" width="300" height="300"></canvas>

<script>
  new Chart(document.getElementById("pie"), {
    type: "pie",
    data: {
      labels: ["Land", "Building"],
      datasets: [
        {
          data: [200000, 800000],
          backgroundColor: ["#5b8def", "#123a7a"],
        },
      ],
    },
    options: {
      responsive: false,
      plugins: {
        legend: { position: "left" },
      },
    },
  });
</script>
