<div class="page">
  <!-- HEADER -->
  <div style="
          display: flex;
          justify-content: space-between;
          align-items: center;
          padding: 20px 60px;
          font-size: 18px;
          color: #1e3a8a;
        ">
    <span>üåê www.costsegregationguys.com</span>
    <span>Page 04</span>
  </div>

  <!-- TITLE -->
  <div style="padding: 10px 60px 0">
    <h2 style="
            font-size: 36px;
            color: #0f2e5a;
            margin: 0 0 10px 0;
            line-height: 1.25;
          ">
      <%= proposalData.page4.content.title %>
    </h2>
  </div>

  <!-- CONTENT -->
  <div style="padding: 0 60px 60px; color: #000;">
    <!-- Intro -->
    <p style="font-size: 20px; margin-bottom: 20px; line-height: 1.4;">
      <%= proposalData.page4.content.intro %>
    </p>

    <!-- Scenarios Header -->
    <h3 style="font-size: 24px; color: #0f2e5a; margin-bottom: 12px;">
      <%= proposalData.page4.content.analysisTitle %>
    </h3>

    <!-- Scenarios Grid -->
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 30px;">
      <% proposalData.page4.content.scenarios.forEach(scenario=> { %>
      <div style="background-color: #f8fafc; padding: 15px; border-radius: 4px; border: 1px solid #e2e8f0;">
        <div style="font-weight: bold; font-size: 16px; color: #1e3a8a; margin-bottom: 10px; border-bottom: 1px solid #cbd5e1; padding-bottom: 5px;">
          <%= scenario.name %>
        </div>
        <% scenario.details.forEach(detail=> { %>
        <div style="display: flex; justify-content: space-between; font-size: 16px; margin-bottom: 6px;">
          <span>
            <%= detail.label %>:
          </span>
          <span style="font-weight: 500;">
            <%= detail.value %>
          </span>
        </div>
        <% }) %>
      </div>
      <% }) %>
    </div>

    <!-- Property Details -->
    <h3 style="font-size: 24px; color: #0f2e5a; margin-bottom: 12px;">Property Details:</h3>
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: x 40px; row-gap: 6px; font-size: 20px; margin-bottom: 20px;">
      <% proposalData.page4.content.propertyDetails.forEach(item=> { %>
      <div style="display: contents;">
        <div style="color: #64748b;">
          <%= item.label %>:
        </div>
        <div style="font-weight: 500;">
          <%= item.value %>
        </div>
      </div>
      <% }) %>
    </div>

    <!-- Disclaimer -->
    <p style="font-size: 16px; color: #64748b; font-style: italic; line-height: 1.4; border-top: 1px solid #e2e8f0; padding-top: 10px;">
      <%= proposalData.page4.content.disclaimer %>
    </p>
  </div>

  <!-- ANGLED SHAPES -->
  <div style="
            position: absolute;
            width: 80px;
            height: 280px;
            background: #0f2e5a;
            transform: rotate(45deg);
            right: -70px;
            bottom: 100px;
            z-index: -1;
        "></div>
  <div style="
            position: absolute;
            width: 80px;
            height: 280px;
            background: #1e4ed8;
            transform: rotate(45deg);
            right: -80px;
            bottom: 40px;
            z-index: -2;
        "></div>
</div>