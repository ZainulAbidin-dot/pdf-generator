<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <style>
      @page {
        size: A4;
        margin: 80px 50px;
      }

      body {
        font-family: Arial, sans-serif;
        font-size: 12px;
        color: #333;
      }

      header {
        position: fixed;
        top: -60px;
        left: 0;
        right: 0;
        height: 50px;
        text-align: right;
        font-size: 10px;
        color: #777;
      }

      footer {
        position: fixed;
        bottom: -50px;
        left: 0;
        right: 0;
        text-align: center;
        font-size: 10px;
        color: #777;
      }

      h1 {
        color: #0f4c81;
        margin-bottom: 10px;
      }

      .section {
        margin-bottom: 25px;
        page-break-inside: avoid;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
      }

      th,
      td {
        border: 1px solid #ccc;
        padding: 8px;
        text-align: left;
      }

      th {
        background: #f2f2f2;
      }
    </style>
  </head>

  <body>
    <header>
      <strong><%= companyName %></strong>
    </header>

    <footer>
      Page <span class="pageNumber"></span> of <span class="totalPages"></span>
    </footer>

    <h1>Cost Segregation Proposal</h1>

    <div class="section">
      <strong>Client:</strong> <%= clientName %><br />
      <strong>Date:</strong> <%= date %>
    </div>

    <div class="section">
      <h3>Overview</h3>
      <p><%= overview %></p>
    </div>

    <div class="section">
      <h3>Estimated Benefits</h3>
      <table>
        <tr>
          <th>Category</th>
          <th>Amount</th>
        </tr>
        <% benefits.forEach(b => { %>
        <tr>
          <td><%= b.name %></td>
          <td>$<%= b.amount %></td>
        </tr>
        <% }) %>
      </table>
    </div>
  </body>
</html>
